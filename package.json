{
  "name": "@auro-orm/engine",
  "version": "0.1.4",
  "author": "Igor Tomic",
  "description": "Engine for Auro ORM written in Rust.",
  "os": [
    "linux",
    "win32",
    "darwin"
  ],
  "cpu": [
    "x64"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "auro-engine",
    "triples": {}
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.15.2",
    "@swc-node/register": "^1.5.5",
    "@swc/core": "^1.3.32",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "ava": "^5.1.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "ava": {
    "timeout": "3m",
    "require": [
      "@swc-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "universal": "napi universal",
    "version": "napi version",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "eslint . -c ./.eslintrc.yml"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/auro-orm/auro-engines"
  },
  "bugs": {
    "url": "https://github.com/auro-orm/auro-engines/issues"
  },
  "homepage": "https://github.com/auro-orm/auro-engines#readme",
  "optionalDependencies": {
    "@auro-orm/engine-win32-x64-msvc": "0.1.3",
    "@auro-orm/engine-darwin-x64": "0.1.3",
    "@auro-orm/engine-linux-x64-gnu": "0.1.3"
  }
}